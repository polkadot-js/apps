{
  "name": "canvas-ui",
  "repository": "https://github.com/paritytech/canvas-ui",
  "main": "packages/app-electron/build/electron.js",
  "description": "An Apps portal into the Polkadot network",
  "author": "Keith Ingram <keith@parity.io>",
  "version": "0.0.1",
  "license": "Apache-2",
  "private": true,
  "homepage": ".",
  "bin": {
    "deploy": "./scripts/deploy.js"
  },
  "workspaces": [
    "packages/*"
  ],
  "build": {
    "productName": "Canvas UI",
    "artifactName": "canvas-ui-${version}.${ext}",
    "files": [
      "./packages/app-electron/build",
      "./packages/app-electron/assets",
      "./packages/app-electron/appleEntitlements"
    ],
    "appId": "com.paritytech.canvas-ui",
    "mac": {
      "category": "public.app-category.finance",
      "entitlements": "./packages/app-electron/appleEntitlements/entitlements.mac.plist",
      "hardenedRuntime": true,
      "target": "dmg"
    },
    "directories": {
      "buildResources": "./packages/app-electron/assets",
      "output": "./packages/app-electron/release"
    },
    "afterSign": "electron-builder-notarize"
  },
  "resolutions": {
    "babel-core": "^7.0.0-bridge.0"
  },
  "scripts": {
    "analyze": "yarn run build && yarn source-map-explorer packages/app/build/main.*.js",
    "build": "yarn run build:i18n && yarn run build:code",
    "build:code": "NODE_ENV=production node_modules/@polkadot/dev/scripts/polkadot-dev-build-ts.js",
    "build:i18n": "i18next-scanner --config i18next-scanner.config.js && node ./scripts/i18nSort.js",
    "build:release:electron": "yarn build && yarn build:electron && yarn postinstall:electron",
    "build:release:ipfs": "node scripts/ipfsUpload.js",
    "build:release:ghpages": "yarn polkadot-ci-ghact-docs",
    "build:release:www": "yarn polkadot-ci-ghact-build && yarn build:release:ipfs && yarn build:release:ghpages",
    "build:www": "rm -rf packages/app/build && mkdir -p packages/app/build && yarn run build:i18n && cd packages/app && NODE_ENV=production webpack --config webpack.config.js",
    "build:electron": "yarn clean:electronBuild && yarn build:electronMain && yarn build:electronRenderer",
    "build:devElectronRenderer": "cd packages/app-electron && NODE_ENV=development webpack --config webpack.renderer.config.js",
    "build:electronRenderer": "cd packages/app-electron && NODE_ENV=production webpack --config webpack.renderer.config.js",
    "build:devElectronMain": "cd packages/app-electron && NODE_ENV=development webpack --config webpack.main.config.js",
    "build:electronMain": "cd packages/app-electron && NODE_ENV=production webpack --config webpack.main.config.js",
    "packElectron:test": "yarn build:release:electron && electron-builder --dir",
    "packElectron:mac": "yarn build:release:electron && electron-builder build --mac",
    "packElectron:win": "yarn build:release:electron && electron-builder build --win",
    "packElectron:linux": "yarn build:release:electron && electron-builder build --linux",
    "packElectron": "yarn build:release:electron && yarn clean:electronRelease && electron-builder build -mwl",
    "docs": "echo \"skipping docs\"",
    "clean": "polkadot-dev-clean-build",
    "clean:electronBuild": "cd packages/app-electron && polkadot-dev-clean-build",
    "clean:electronRelease": "cd packages/app-electron && rm -rf release",
    "clean:i18n": "rm -rf packages/app/public/locales/en && mkdir -p packages/app/public/locales/en",
    "lint": "polkadot-dev-run-lint",
    "lint:css": "stylelint './packages/**/src/**/*.tsx'",
    "postinstall": "polkadot-dev-yarn-only",
    "postinstall:electron": "electron-builder install-app-deps",
    "test": "polkadot-dev-run-test packages/app/src --passWithNoTests",
    "test:one": "polkadot-dev-run-test",
    "start": "yarn clean && cd packages/app && yarn webpack-cli serve --config webpack.serve.js --port 3000 --watch",
    "start:electron": "yarn clean:electronBuild && concurrently 'yarn build:devElectronMain && cd packages/app-electron && electron ./build/electron.js' 'yarn build:devElectronRenderer'"
  },
  "devDependencies": {
    "@babel/core": "^7.10.2",
    "@babel/register": "^7.10.1",
    "@babel/runtime": "^7.10.2",
    "@pinata/sdk": "^1.1.10",
    "@polkadot/dev": "^0.61.24",
    "@polkadot/ts": "^0.3.63",
    "@types/bn.js": "^4.11.6",
    "@types/chart.js": "^2.9.21",
    "@types/file-saver": "^2.0.1",
    "@types/i18next": "^13.0.0",
    "@types/jest": "^25.2.3",
    "@types/react-beautiful-dnd": "^13.0.0",
    "@types/react-copy-to-clipboard": "^4.3.0",
    "@types/react-dom": "^16.9.8",
    "@types/react-router-dom": "^5.1.5",
    "@types/react-tooltip": "^4.2.4",
    "@types/store": "^2.0.2",
    "@types/styled-components": "^5.1.0",
    "@types/styled-theming": "^2.2.3",
    "concurrently": "^5.2.0",
    "devtron": "^1.4.0",
    "dnslink-cloudflare": "^2.0.4",
    "electron": "^9.0.3",
    "electron-builder": "^22.7.0",
    "electron-builder-notarize": "^1.1.2",
    "gh-pages": "^3.1.0",
    "i18next-scanner": "^2.11.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "source-map-explorer": "^2.4.2",
    "stylelint": "^13.6.0",
    "stylelint-config-recommended": "^3.0.0",
    "stylelint-config-styled-components": "^0.1.1",
    "terser-webpack-plugin": "^3.0.3",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11",
    "webpack-merge": "^4.2.2",
    "webpack-plugin-serve": "^1.0.1"
  }
}
