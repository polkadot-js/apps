{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": "./packages",
    "composite": false
  },
  "include": [
    "packages/**/public/env-config.js",
    "packages/**/src/**/*",
    "packages/**/scripts/**/*",
    "packages/**/test/**/*",
    "packages/**/webpack.*.cjs",
    "scripts/*",
    ".prettierrc.cjs",
    "eslint.config.js",
    "i18next-scanner.config.cjs"
  ],
  "exclude": [
    "build/**/*",
    "**/build/**/*",
    "**/node_modules/**/*"
  ]
}
